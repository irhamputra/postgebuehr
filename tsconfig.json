{
  "compilerOptions": {
    "module": "commonjs",
    "rootDir": "./src",
    "removeComments": true,
    "esModuleInterop": true,
    "target": "esnext",
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    }
  }
}
